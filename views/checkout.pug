extends layout

append head
  link(rel='stylesheet', href='/stylesheets/checkout.css')
  script(type="module", src="/javascripts/checkout.js")

block content
  mixin price(n)
    p.price= n.toLocaleString().replace(/,/g, ".")
  include includes/topbar
  #checkout.flex-center
    main.flex-col.align-center
      .full-w
        .heading.flex.align-center
          p.name TEN SAN PHAM
          p.price GIA TIEN
          p.amount SO LUONG
        #list
          each item in cartItems
            .line(id=`product_${item.id}`)
              p.name= item.name
              +price(item.price)
              p.amount= item.amount
              button.primary-btn.remove-btn(name=item.id) XOA
        .line.bottom
          p.name TONG CONG
          - let totalAmount = cartItems.reduce((prev, curr) => prev + curr.price * curr.amount, 0)
          +price(totalAmount)
      button(class=`secondary-btn${cartItems.lenght ? "" : " disabled"}`) THANH TOAN
