<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>
  <body>
    <%- include('layouts/navbar'); -%>
    <!-- Page Header -->
    <header
      class="masthead"
      style="background-image: url('/img/contact-bg.jpg')"
    >
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>New Post</h1>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <!-- for browser to know that the form contains mutli media. will encripy multie media and send to server -->
          <form
            action="/posts/store"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Title</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Title"
                  id="title"
                  name="title"
                />
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Content</label>
                <textarea
                  rows="5"
                  class="form-control"
                  placeholder="Content"
                  id="body"
                  name="body"
                ></textarea>
              </div>
            </div>
            <div class="control-group">
              <div id="preview-image"></div>
              <div class="form-group floating-label-form-group controls">
                <label>Image</label>
                <input
                  type="file"
                  class="form-control"
                  accept="image/*"
                  id="image"
                  name="image"
                />
              </div>
            </div>
            <br />
            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary"
                id="sendMessageButton"
              >
                Send
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <hr />
    <script>
      document.querySelector("#image").addEventListener("change", (e) => {
        const previewImg = document.querySelector("#preview-image");
        previewImg.innerHTML = "";
        const imgPreview = document.createElement("img");
        imgPreview.src = URL.createObjectURL(e.target.files[0]);
        previewImg.appendChild(imgPreview);
      });
    </script>
    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
