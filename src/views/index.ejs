<!DOCTYPE html>
<html>
  <%- include("layouts/head") -%>
  <body>
    <%- include("layouts/navbar") -%> <%- include("layouts/header", { heading:
    "MINDX DBP-WEB-D06" }) -%>

    <div class="container d-flex flex-column align-items-center">
      <% posts.forEach(({ image, title, datePosted, body, author }) => { %>
      <div class="post d-flex flex-column">
        <% if (image) { %>
        <img
          class="post-img mx-auto"
          src="upload/<%= image %>"
          alt="<%= image %>"
        />
        <% } %>
        <div class="mt-3">
          <div class="post-title d-flex">
            <h5 class="mr-2"><%= title %></h5>
            <span class="mt-1 text-secondary">
              - <%= [datePosted.getDate(), datePosted.getMonth() + 1,
              datePosted.getFullYear()].join("/") + " " +
              datePosted.toLocaleTimeString() %>
            </span>
          </div>
          <p><%= body %></p>
          <p class="author text-end"><b><%= author %></b></p>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include("layouts/footer") -%> <%- include("layouts/scripts") -%>
  </body>
</html>
